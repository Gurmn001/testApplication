{{!< layout}} <h2>Edit Assignment</h2>
    <form action="/assignments/edit/{{assignment._id}}" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{assignment.title}}" required>
        </div>
        <!-- Other fields (description, due date) -->
        <button type="submit" class="btn btn-primary">Update Assignment</button>
    </form>