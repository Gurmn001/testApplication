{{!< layout}} <h2>My Assignments</h2>
    <ul class="list-group">
        {{#each assignments}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <h5>{{this.title}}</h5>
                <p>{{this.description}}</p>
                <small>Due: {{this.dueDate}}</small>
            </div>
            <div>
                <!-- Edit Button -->
                <a href="/assignments/edit/{{this._id}}" class="btn btn-secondary btn-sm">Edit</a>

                <!-- Delete Button -->
                <form action="/assignments/delete/{{this._id}}" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm"
                        onclick="return confirm('Are you sure you want to delete this assignment?');">Delete</button>
                </form>
            </div>
        </li>
        {{/each}}
    </ul>